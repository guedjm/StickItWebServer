doctype html
html
    head
        title Login
        link(href='/css/bootstrap.min.css' rel='stylesheet')
        link(href='/css/freelancer.css' rel='stylesheet')
        link(href='/font-awesome/css/font-awesome.min.css' rel='stylesheet')
        script(src='/js/jquery-2.1.4.min.js' type='text/javascript')
        script(src='/js/bootstrap.min.js' type='text/javascript')
        script(src='/js/freelancer.js' type='text/javascript')
    body
        div(class='container' style='margin-top: 110px')
            div(class='row')
                div(class='col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3' style='font-size: large')
                    span #{fname} #{lname},
                    br
                    br
                    span(style='font-weight: bold') #{api} #{' '}
                    span would like to access some of your profile information
                    br
                    br
                    br
                    div(class='row' style='font-size: large')
                        form(action='' method='post' name='authorize')

                            input(type='hidden' name='transaction_id' value='#{transactionID}')

                            div(class='col-xs-6')
                                button(type='submit' name='allow' class='btn btn-md btn-success') Allow access

                            div(class='col-xs-6')
                                button(type='submit' name='cancel' class='btn btn-md') Cancel

